<Window x:Class="SimpleERP.Views.Main.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleERP.Views.Main"
        mc:Ignorable="d"
        Title="Login" Height="440" Width="515">
    <Grid>
        <Label Content="아이티" HorizontalAlignment="Left" Margin="85,169,0,0" VerticalAlignment="Top"/>
        <TextBox Text="{Binding USER_ID}"  HorizontalAlignment="Left" Height="26" Margin="176,169,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="104"/>

        <Label Content="비밀번호" HorizontalAlignment="Left" Margin="85,250,0,0" VerticalAlignment="Top"/>
        <PasswordBox Name="txtPassword" HorizontalAlignment="Left" Height="28" Margin="176,248,0,0" VerticalAlignment="Top" Width="93" />

        <Button Command="{Binding LoginCmd}" CommandParameter="{Binding ElementName=txtPassword}" Content="Login" HorizontalAlignment="Left" Height="67" Margin="323,195,0,0" VerticalAlignment="Top" Width="101"/>
        
        <Image HorizontalAlignment="Left" Height="123" Margin="36,21,0,0" VerticalAlignment="Top" Width="425"/>

    </Grid>
</Window>
